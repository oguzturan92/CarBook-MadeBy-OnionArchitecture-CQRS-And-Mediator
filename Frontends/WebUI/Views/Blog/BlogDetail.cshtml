@model BlogDetailModel
@{
    ViewData["Title"] = "BlogDetail";
    Layout = "_Layout";
}

    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/Template/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
                <div class="col-md-9 ftco-animate pb-5">
                    <p class="breadcrumbs"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Ana Sayfa <i class="ion-ios-arrow-forward"></i></a></span> <span class="mr-2"><a href="blog.html">Blog <i class="ion-ios-arrow-forward"></i></a></span> <span>Blog Detay <i class="ion-ios-arrow-forward"></i></span></p>
                    <h1 class="mb-3 bread">@(Model.Blog.BlogTitle.Length > 20 ? Model.Blog.BlogTitle.Substring(0, 20)+"..." : Model.Blog.BlogTitle)</h1>
                </div>
            </div>
        </div>
    </section>

