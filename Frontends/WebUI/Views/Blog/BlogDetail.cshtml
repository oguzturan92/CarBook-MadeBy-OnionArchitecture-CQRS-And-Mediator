                        <div class="comment-form-wrap pt-5">
                            <h3 class="mb-5">Leave a comment</h3>
                            <form action="#" class="p-5 bg-light">
                                <div class="form-group">
                                    <label for="name">Name *</label>
                                    <input type="text" class="form-control" id="name">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email *</label>
                                    <input type="email" class="form-control" id="email">
                                </div>
                                <div class="form-group">
                                    <label for="website">Website</label>
                                    <input type="url" class="form-control" id="website">
                                </div>

                                <div class="form-group">
                                    <label for="message">Message</label>
                                    <textarea name="" id="message" cols="30" rows="10" class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Post Comment" class="btn py-3 px-4 btn-primary">
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
                <div class="col-md-4 sidebar ftco-animate">

                    <div class="sidebar-box">
                        <form action="#" class="search-form">
                            <div class="form-group">
                            <span class="icon icon-search"></span>
                            <input type="text" class="form-control" placeholder="Type a keyword and hit enter">
                            </div>
                        </form>
                    </div>

                    <div class="sidebar-box ftco-animate">
                        <div class="categories">
                            <h3>Kategoriler</h3>
                            @foreach (var item in Model.Categories)
                            {
                                <li><a href="#">@item.CategoryName <span>(0)</span></a></li>
                            }
                        </div>
                    </div>

                    <div class="sidebar-box ftco-animate">
                        <h3>Son Bloglar</h3>
                        
                        @foreach (var item in Model.Blogs)
                        {
                            <div class="block-21 mb-4 d-flex">
                                <a class="blog-img mr-4" style="background-image: url(@item.BlogImage);"></a>
                                <div class="text">
                                    <h3 class="heading"><a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@item.BlogId">@item.BlogTitle</a></h3>
                                    <div class="meta">
                                        <div><a href="#"><span class="icon-calendar"></span>@item.BlogDate.ToString("dd MMM yyyy")</a></div>
                                        <div><a href="#"><span class="icon-person"></span> @item.AuthorName</a></div>
                                        <div><a href="#"><span class="icon-chat"></span> 0</a></div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>

                    @if (Model.Tags.Any())
                    {
                        <div class="sidebar-box ftco-animate">
                            <h3>Etiketler</h3>
                            <div class="tagcloud">
                                @foreach (var item in Model.Tags)
                                {
                                    <a href="#" class="tag-cloud-link">@item.TagCloudTitle</a>
                                }
                            </div>
                        </div>
                    }

