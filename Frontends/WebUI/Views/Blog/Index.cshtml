@model List<GetAllBlogsWithAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/Template/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
                <div class="col-md-9 ftco-animate pb-5">
                    <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Ana Sayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Blog <i class="ion-ios-arrow-forward"></i></span></p>
                    <h1 class="mb-3 bread">Blog</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section">
        <div class="container">
            <div class="row d-flex justify-content-center">
                
                @foreach (var item in Model)
                {
                    <div class="col-md-12 text-center d-flex ftco-animate">
                        <div class="blog-entry justify-content-end mb-md-5">
                            <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@item.BlogId" class="block-20 img" style="background-image: url('@item.BlogImage');">
                            </a>
                            <div class="text px-md-5 pt-4">
                                <div class="meta mb-3">
                                    <div><a href="#">@item.BlogDate.ToString("dd MMM yyyy")</a></div>
                                    <div><a href="#">@item.AuthorName</a></div>
                                    <div><a href="#" class="meta-chat"><span class="icon-chat"></span> 0</a></div>
                                </div>
                                <h3 class="heading mt-2"><a href="#">@item.BlogTitle</a></h3>
                                <p>@item.BlogSubTitle</p>
                                <p><a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@item.BlogId" class="btn btn-primary">Devamını oku <span class="icon-long-arrow-right"></span></a></p>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>