@model UpdateContactDto
@{
    ViewData["Title"] = "ContactUpdate";
    Layout = "_LayoutAdmin";
}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Mesaj Detay</h4>
                    <hr>
                    <form asp-controller="Contact" asp-action="ContactUpdate" method="post">
                        <input type="hidden" asp-for="ContactId">
                        <div class="form-group">
                            <label for="ContactName">Marka</label>
                            <input type="text" asp-for="ContactName" id="ContactName" class="form-control" disabled>
                        </div>
                        <div class="form-group">    
                            <a asp-area="Admin" asp-controller="Contact" asp-action="ContactList" class="btn btn-dark">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>