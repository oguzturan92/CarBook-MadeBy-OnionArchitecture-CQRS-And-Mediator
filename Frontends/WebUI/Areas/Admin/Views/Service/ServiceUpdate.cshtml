@model UpdateServiceDto
@{
    ViewData["Title"] = "ServiceUpdate";
    Layout = "_LayoutAdmin";
}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hizmetler Düzenle</h4>
                    <hr>
                    <form asp-controller="Service" asp-action="ServiceUpdate" method="post">
                        <input type="hidden" asp-for="ServiceId">
                        <div class="form-group">
                            <label for="ServiceTitle">Başlık</label>
                            <input type="text" asp-for="ServiceTitle" id="ServiceTitle" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="ServiceDescription">Açıklama</label>
                            <textarea class="form-control" asp-for="ServiceDescription" id="ServiceDescription" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="ServiceIcon">İkon</label>
                            <input type="text" asp-for="ServiceIcon" id="ServiceIcon" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success" type="submit">Kaydet</button>
                            <a asp-area="Admin" asp-controller="Service" asp-action="ServiceList" class="btn btn-dark">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>