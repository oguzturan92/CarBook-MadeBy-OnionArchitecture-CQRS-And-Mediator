@model List<ResultBlogDto>
@{
    ViewData["Title"] = "BlogList";
    Layout = "_LayoutAdmin";
    int count = 0;
}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog Listesi</h4>
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th>Başlık</th>
                                        <th>Yazar</th>
                                        <th>Kategori</th>
                                        <th colspan="3"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th>@count</th>
                                            <td>@item.BlogDate.ToString("dd MMM yyy HH:mm:ss")</td>
                                            <td>@item.BlogTitle</td>
                                            <td>@item.AuthorId</td>
                                            <td>@item.CategoryId</td>
                                            <td><a asp-area="Admin" asp-controller="Comment" asp-action="CommentList" asp-route-blogId="@item.BlogId" class="btn btn-sm btn-primary"><i class="fas fa-comment-alt"></i></a></td>
                                            <td><a asp-area="Admin" asp-controller="Blog" asp-action="BlogUpdate" asp-route-id="@item.BlogId" class="btn btn-sm btn-warning"><i class="fas fa-pencil-alt"></i></a></td>
                                            <td><a asp-area="Admin" asp-controller="Blog" asp-action="BlogDelete" asp-route-id="@item.BlogId" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    } else
                    {
                        <div class="alert alert-info mb-0" role="alert">Sonuç Bulunamadı</div>
                    }
                    <div class="row">
                        <div class="col-12 mt-3">
                            <a asp-area="Admin" asp-controller="Blog" asp-action="BlogCreate" class="btn btn-success">Yeni</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>